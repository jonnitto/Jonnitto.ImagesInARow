# http://EditorConfig.org

# top-most EditorConfig file
root = true

# Default
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing-whitespace = true
indent_style = space
indent_size = 4

# Exceptions
[{*.{yaml,pcss},package.json,.*rc}]
indent_size = 2

[*.{json,pcss}]
max_line_length = 1000

[*.md]
trim_trailing-whitespace = false
